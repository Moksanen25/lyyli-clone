# Updated 2024-12-19: Added security-related environment variables

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/lyyli_db"
DATABASE_SSL="true"

# Authentication
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="changeme_secure_password_here"
JWT_SECRET="your-super-secret-jwt-key-here-minimum-32-characters"
SESSION_SECRET="your-super-secret-session-key-here-minimum-32-characters"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key-here"
CSRF_SECRET="your-csrf-secret-key-here"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="10"
RATE_LIMIT_WINDOW_MS="60000"

# Email Configuration
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-email-password"
SMTP_FROM="noreply@lyyli.ai"

# External Services
GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"
HUBSPOT_PORTAL_ID="your-hubspot-portal-id"
HUBSPOT_API_KEY="your-hubspot-api-key"

# Environment
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Security Headers
ENABLE_HSTS="true"
ENABLE_CSP="true"
ENABLE_XSS_PROTECTION="true"
